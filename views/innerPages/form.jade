.row
  .col-md-12
    h3.page-title
      | {{website.title}} Advanced Reports
      small &nbsp;
    ul.page-breadcrumb.breadcrumb
      li
        i.fa.fa-home
        a(style="color:grey;text-decoration:none;cursor:default") Home
        i.fa.fa-angle-right
      li
        a(style="color:grey;text-decoration:none;cursor:default") My Sites
        i.fa.fa-angle-right
      li
        a(style="color:grey;text-decoration:none;cursor:default") {{website.title}}
      li.pull-right
        #dashboard-report-range.dashboard-date-range.tooltips(data-placement="top")
          i.fa.fa-calendar
          span
          i.fa.fa-angle-down
  .col-md-12
    .portlet
      .portlet-title
        .caption
          i.fa.fa-reorder
          | Edit Mode
      .portlet-body.form
        form(role="form")
          .form-body
            label Track information based on objects
            .form-group
              select.form-control(ng-model="sFilt")
                option(ng-repeat="filter in website.settings.filters" ng-value="filter.filter") {{filter.filter}}
  .col-md-6(ng-show="selectedFilter.click")          
    .portlet
      .portlet-title
        .caption
          i.fa.fa-reorder
          | Click Tracker
        .tools
          a.collapse(href="javascript:;")
      .portlet-body
        canvas#clickTracker(style="width:100%;height:420px;")      
  .col-md-6(ng-show="selectedFilter.line")   
    .portlet
      .portlet-title
        .caption
          i.fa.fa-reorder
          | Line Tracker
        .tools
          a.collapse(href="javascript:;")
      .portlet-body
        canvas#lineTracker(style="width:100%;height:420px;")     
  .col-md-6(ng-show="selectedFilter.eye")
    .portlet
      .portlet-title
        .caption
          i.fa.fa-reorder
          | Eye Tracker
        .tools
          a.collapse(href="javascript:;")
      .portlet-body
        canvas#eyeTracker(style="width:100%;height:420px;")     