include head

.logo
	img(src="assets/img/logo.png", alt="")
.content(ng-app="uxp" ng-controller="login")
	form.login-form
		div(style="color:red;text-align:center;") {{error}}
		div(style="color:green;text-align:center;") {{success}}
		h3.form-title Login to your account
		.alert.alert-error.display-hide
			button.close(data-close="alert")
			span
				| Enter any username and password.
		.form-group
			// ie8, ie9 does not support html5 placeholder, so we just show field title for that
			label.control-label.visible-ie8.visible-ie9 Username
			.input-icon
				i.fa.fa-user
				input.form-control.placeholder-no-fix(type="text", autocomplete="off", placeholder="Username", name="username" ng-model="username")
		.form-group
			label.control-label.visible-ie8.visible-ie9 Password
			.input-icon
				i.fa.fa-lock
				input.form-control.placeholder-no-fix(type="password", autocomplete="off", placeholder="Password", name="password" ng-model="password")
		.form-actions
			label.checkbox
				input(type="checkbox", name="remember", value="1")
				| &nbsp;Remember me
			button.btn.btn-info.pull-right(ng-click="login()")
				| Login
		.forget-password
			h4 Forgot your password ?
			p
				| No worries, click
				a#forget-password(href="javascript:;") &nbsp;here
				| &nbsp;to reset your password.
		.create-account
			p
				| Don't have an account yet ?
				a#register-btn(href="javascript:;") &nbsp;Create an account
	// END LOGIN FORM
	// BEGIN FORGOT PASSWORD FORM
	form.forget-form(action="index.html", method="post")
		h3 Forget Password ?
		p
			| Enter your e-mail address below to reset your password.
		.form-group
			.input-icon
				i.fa.fa-envelope
				input.form-control.placeholder-no-fix(type="text", autocomplete="off", placeholder="Email", name="email")
		.form-actions
			button#back-btn.btn.btn-default(type="button")
				i.m-icon-swapleft
				| Back
			button.btn.btn-info.pull-right(type="submit")
				| Submit
	// END FORGOT PASSWORD FORM
	// BEGIN REGISTRATION FORM
	form.register-form(action="index.html", method="post")
		div(style="color:red;text-align:center;") {{error}}
		h3 Sign Up
		p
			| Enter your personal details below:
		.form-group
			label.control-label.visible-ie8.visible-ie9 Full Name
			.input-icon
				i.fa.fa-font
				input.form-control.placeholder-no-fix(type="text", placeholder="Full Name", name="fullname" ng-model="rName")
		.form-group
			// ie8, ie9 does not support html5 placeholder, so we just show field title for that
			label.control-label.visible-ie8.visible-ie9 Email
			.input-icon
				i.fa.fa-envelope
				input.form-control.placeholder-no-fix(type="text", placeholder="Email", name="email" ng-model="rEmail")
		.form-group
			label.control-label.visible-ie8.visible-ie9 City/Town
			.input-icon
				i.fa.fa-location-arrow
				input.form-control.placeholder-no-fix(type="text", placeholder="City/Town", name="city" ng-model="rLocation")
		p
			| Enter your account details below:
		.form-group
			label.control-label.visible-ie8.visible-ie9 Username
			.input-icon
				i.fa.fa-user
				input.form-control.placeholder-no-fix(type="text", autocomplete="off", placeholder="Username", name="username" ng-model="rUsername")
		.form-group
			label.control-label.visible-ie8.visible-ie9 Password
			.input-icon
				i.fa.fa-lock
				input#register_password.form-control.placeholder-no-fix(type="password", autocomplete="off", placeholder="Password", name="password" ng-model="rPassword")
		.form-group
			label.control-label.visible-ie8.visible-ie9 Re-type Your Password
			.controls
				.input-icon
					i.fa.fa-check
					input.form-control.placeholder-no-fix(type="password", autocomplete="off", placeholder="Re-type Your Password", name="rpassword" ng-model="rrPassword")
		.form-group
			label
				input(type="checkbox", name="tnc" ng-model="rCheck")
				| I agree to the
				a(href="#") Terms of Service
				| and
				a(href="#") Privacy Policy
			#register_tnc_error
		.form-actions
			button#register-back-btn.btn.btn-default(type="button")
				i.m-icon-swapleft
				| Back
			button#register-submit-btn.btn.btn-info.pull-right(type="submit" ng-click="register()")
				| Sign Up
				i.m-icon-swapright.m-icon-white
	// END REGISTRATION FORM
// END LOGIN
