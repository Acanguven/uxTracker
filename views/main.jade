include head
script(src="js/heatmap.min.js", type="text/javascript")
script(src="assets/scripts/main.js", type="text/javascript")
script.
	var uxToken = "#{token}";
block content
	body.page-header-fixed(ng-app="ux" ng-controller="body")
		.header.navbar.navbar-inverse.navbar-fixed-top
			// BEGIN TOP NAVIGATION BAR
			.header-inner
				a.navbar-brand(href='#/Dashboard')
					img.img-responsive(src='assets/img/logo.png', alt='logo')
				form.search-form.search-form-header(role='form', action='index.html')
					.input-icon.right(style="float:left;")
						i.fa.fa-search
						input.form-control.input-medium.input-sm(type='text', name='query', placeholder='Search...')
					.pack(style="float:left;color:white;margin-top: 5px;font-size: 15px;margin-left: 10px;width: 300px;")
						if pack === 1
							img.item(title='Image of Cover', src='img/icon-47.png' style="float: left;height: 20px;margin-right: 10px;")
							| Starter Plan 
						else if pack === 2
							img.item(title='Image of Cover', src='img/icon-48.png' style="float: left;height: 20px;margin-right: 10px;")
							| Advanced Plan 
						else if pack === 3
							img.item(title='Image of Cover', src='img/icon-49.png' style="float: left;height: 20px;margin-right: 10px;")
							| Premium Plan 
						else if pack === 0
							| Free Plan 
				a.navbar-toggle(href='javascript:;', data-toggle='collapse', data-target='.navbar-collapse')
					img(src='assets/img/menu-toggler.png', alt='')
				ul.nav.navbar-nav.pull-right
		.page-container
			// BEGIN SIDEBAR
			.page-sidebar-wrapper
				.page-sidebar-wrapper
					.page-sidebar.navbar-collapse.collapse
						// BEGIN SIDEBAR MENU
						include sidebar
				// END SIDEBAR MENU
			// END SIDEBAR
			// BEGIN CONTENT
			.page-content-wrapper
				.page-content-wrapper
					.page-content(ng-view)
			// END CONTENT
		.footer
			.footer-inner
				| 2015 © Conquer by Maarifa and Ahmet Can Güven.
			.footer-tools
				span.go-top
					i.fa.fa-angle-up
		script.
			jQuery(document).ready(function() {    
			   App.init(); // initlayout and core plugins
			});